    <form class="login-form" action="">
        <div class="alert alert-success">
        </div>
        <div class="alert alert-danger">

        </div>
        <div class="form-header">
            <h3>Login</h3>
        </div>
        <!--Email Input-->
        <div class="form-group">
            <input type="email"  name="Email" id="log_Email" class="form-input" placeholder="email@example.com"  required  data-pristine-required-message="Enter Valid Email Address">
        </div>
        <!--Password Input-->
        <div class="form-group">
            <input type="password" name="Password" id="log_Password" class="form-input" placeholder="password" required  data-pristine-required-message="Please Enter Password">
        </div>
        <!--Login Button-->
        <div class="form-group">
            <input class="form-button" type="submit" value="Login">
        </div>
        <div class="form-footer">
            Don't have an account? <a href="javascript:void(0)" id="register_form">Sign Up</a>
            <br><a href="javascript:void(0)" id="user_forget_form">Forget Password?</a>
        </div>
    </form>
    <form class="signup-form">
        <div class="alert alert-danger">

        </div>
        <div class="form-header">
            <h3>Signup</h3>
        </div>
        <!--Email Input-->
        <div class="form-group">
            <input type="text" name="Name" id='Name' class="form-input" placeholder="Name" required  data-pristine-required-message="Enter Your Name">
        </div>
        <!--Email Input-->
        <div class="form-group">
            <input type="email"  name="Email" id="Email" class="form-input" placeholder="email@example.com" required  data-pristine-required-message="Enter Valid Email Address">
        </div>
        <!--Company Input-->
        <div class="form-group">
            <input type="text"  name="Company" id="Company" class="form-input" placeholder="Company" required  data-pristine-required-message="Enter Company Name">
        </div>
        <!--Address Input-->
        <div class="form-group">
            <input type="text"  name="Address" id="Address" class="form-input" placeholder="Address"  required  data-pristine-required-message="Enter your Address">
        </div>
        <!--Telephone Input-->
        <div class="form-group">
            <input type="text"  name="Telephone" id="Telephone" class="form-input" placeholder="Telephone"  required  data-pristine-required-message="Enter Telephone Number">
        </div>
        <!--Password Input-->
        <div class="form-group">
            <input type="password" name="Password" id="Password" class="form-input" placeholder="Password" required data-pristine-required-message="Please Enter Password">
        </div>
