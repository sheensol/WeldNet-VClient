    <form class="forget-form" action="">
        <div class="alert alert-success"></div>
        <div class="alert alert-danger"></div>
        <div class="form-header">
            <h3>Forget Password</h3>
        </div>
        <!--Email Input-->
        <div class="form-group">
            <input type="email"  name="Email" id="fog_Email" class="form-input" placeholder="email@example.com" required  data-pristine-required-message="Enter Valid Email Address">
